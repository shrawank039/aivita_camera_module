<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_marginTop="30dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dimgray"
    android:gravity="center"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/login_details_RL1_id"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_90sdp"
        android:background="@drawable/d_top_left_right_radius">

        <ImageView
            android:id="@+id/Goback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@drawable/ic_white_cross"
            android:tint="@color/app_color" />

        <ImageView
            android:id="@+id/login_details_help_IV_id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_help" />

        <TextView
            android:id="@+id/login_details_TV1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:text="You 'll need a Aivita account\n to Continue"
            android:textAlignment="center"
            android:textColor="@color/standard_white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/tv_username"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/login_details_TV1_id"
            android:textColor="@color/dimgray" />

        <EditText
            android:layout_below="@+id/tv_username"
            android:id="@+id/simpleEditText"
            android:layout_width="fill_parent"
            style="@style/AppTheme"
            android:textColor="@color/standard_white"
            android:backgroundTint="@color/dimgray"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/tv_useremail"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@+id/tv_username"
            android:textColor="@color/dimgray" />

        <EditText
            android:layout_below="@+id/tv_useremail"
            android:id="@+id/edtemail"
            android:layout_width="fill_parent"
            style="@style/AppTheme"
            android:inputType="textEmailAddress"
            android:textColor="@color/standard_white"
            android:backgroundTint="@color/dimgray"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/txtphone"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/edtemail"
            android:textColor="@color/dimgray" />

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_below="@+id/txtphone"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Spinner
                    style="@style/mySpinnerItemStyle"
                    android:id="@+id/spinner_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:minWidth="60dp"
                    android:minHeight="40dp" />

            <EditText
                android:layout_gravity="bottom"
                android:id="@+id/edtphone"
                android:layout_width="fill_parent"
                style="@style/AppTheme"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/standard_white"
                android:backgroundTint="@color/dimgray"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </LinearLayout>


        <TextView
            android:layout_below="@id/ll_phone"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/passowrd"
            android:id="@+id/tv_password"
            android:textColor="@color/dimgray" />



        <EditText
            android:id="@+id/password"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:textColor="@color/standard_white"
            android:layout_below="@+id/tv_password"
            android:backgroundTint="@color/dimgray"/>

        <TextView
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Referral code"
            android:id="@+id/tv_referral"
            android:textColor="@color/dimgray" />


        <EditText
            android:id="@+id/referral"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/standard_white"
            android:layout_below="@+id/tv_referral"
            android:backgroundTint="@color/dimgray"/>

        <LinearLayout
            android:id="@+id/imageshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@id/referral"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_profile" />
            <Button
                android:layout_marginEnd="15dp"
                android:layout_marginStart="40dp"
                android:id="@+id/btn_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="4"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center"
                android:text="Take Photo" />
        </LinearLayout>


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageshow"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:backgroundTint="@color/app_color"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/standard_white"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnSignUp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_details_TV2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_details_RL3_id"
                android:layout_centerHorizontal="true"
                android:text="Already have an account ?"
                android:textAlignment="center"
                android:textColor="@color/standard_white" />

            <TextView
                android:id="@+id/tv_loginagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_details_RL3_id"
                android:layout_centerHorizontal="true"
                android:text="Login here"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textAlignment="center"
                android:textColor="@color/app_color" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"

                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" />

